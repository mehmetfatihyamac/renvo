generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Listing {
  id          String   @id @default(cuid())
  title       String
  description String
  pricePerDay Int
  delivery    String
  city        String
  ownerId     String?
  createdAt   DateTime @default(now())
  orders      Order[]
}

model Order {
  id            String   @id @default(cuid())
  listingId     String
  days          Int
  renterEmail   String
  rentAmount    Int
  depositAmount Int
  totalAmount   Int
  status        String   @default("PENDING")
  createdAt     DateTime @default(now())

  listing Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
}
